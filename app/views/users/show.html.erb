<div class="booyah-box">
  <div class="row">
    <div class="col-4">
  <%= image_tag 'user.png' %>
</div>
    <div class="col-8">
      <h1><%= @user.email %></h1>
      <h3>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
      <h4>Total number of comments:<%=  @user.comments.count %></h4>
      <h4>Total 5 star comments:<%= @user.comments.where(rating: '5_stars').count %></h4>
    </div>
  </div>
   <div class="clear"></div>
</div>
